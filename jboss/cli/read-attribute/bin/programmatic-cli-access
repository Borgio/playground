"

debug=false

function main() {

    while [ -n "$1" ]; do
        if [ "$1" = "--debug" ]; then
            debug=true
        fi
        shift
    done

    ${debug} && debug_args="-agentlib:jdwp=transport=dt_socket,server=y,suspend=y,address=5006"

    java ${debug_args} -cp ${classpath} io.novaordis.playground.jboss.cli.readattr.Main
}

main $@